<%#can write on on click script to redirect to the project%>
<a href=<%= profile_path(profile)%>>
  <div id="<%= profile.id %>" class="col-lg-2 col-md-3 col-sm-3 col panel panel-default square" >
    <div class="imageheight">
      <% displayedpicture = profile.avatar%>
      <%if !displayedpicture.nil?%>
        <%= image_tag displayedpicture.url(), :class => 'fisrtpic img-responsive', :onload => "trimImage(\"##{profile.id}\")"%>
      <%end%>
    </div>
    <h4 class="title text-center">
      <%=profile.full_name%>
    </h4>
  </div>
</a>