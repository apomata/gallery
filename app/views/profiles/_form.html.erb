<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<script type="text/javascript">
  function removecreator(button, projectid) {
    var r = confirm("Arou you sure you no longer with to be associated with this project?");
    if (r == true) {

      $.post('/ajax/creatorremove.json', {
             p: projectid
        }, function(data) {
             var output = data.result;
             alert(output);
             $(button).closest("li").hide();
        })
    }

  }
</script>

<div class="col-xs-11 col-xs-offset-1">
    <h4 class="turninline-block">

      <div class="field turninline-block">
        <%= f.label :first_name%>
        <%= f.text_field :first_name, :class => "form_control" %>
      </div>
      <div class="field turninline-block">
        <%= f.label :last_name%>
        <%= f.text_field :last_name, :class => "form_control" %>
      </div>
    </h4>
    <div class="actions turninline-block">
      <%= f.submit %>
    </div>
</div>

<div class="col-xs-11 col-xs-offset-1">
  <div class="col-md-3" >
    <div id="picdiv" >
      <%= image_tag @profile.avatar.url(:medium), :class => "img-responsive" %>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
       <h3 class="panel-title">Change profile picture</h3>
      </div>
      <div class="panel-body">
        <div class="field">
          <%= f.file_field :avatar %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-9 container">
    <% if current_user == @profile %>
      <%= link_to 'Destroy', @profile, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

    <div class="panel panel-primary">
      <div class="panel-heading">
       <h3 class="panel-title">Contact Info</h3>
      </div>
      <div class="panel-body">
        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Bio</h3>
      </div>
      <div class="panel-body">
        <div class="field">
          <%= f.text_area :bio, :class => "form_control col-xs-12 custom-control", :rows => '5' %>
        </div>
      </div>
    </div>
  </div>
</div>

<div  class="col-xs-11 col-xs-offset-1">

  <div  id="projectspanel" class="col-xs-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Projects</h3>
      </div>
      <div class="panel-body">
        <ul class="list-group ">
          <% @profile.projects.each do |project| %>
            <li class="list-group-item">
              <%= image_tag project.projectpictures.first.picture.url(:thumb)%>
              <%= link_to "#{project.title}", project_path(project)%>
              <%= link_to 'Remove project', project, method: :removecreator, data: { confirm: 'Are you sure?' } %>
              <%= button_tag "Remove project", :type => "button", :onclick => "removecreator(this, #{project.id})"%>
            </li>
          <%end%>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="panel panel-primary ">
      <div class="panel-heading">
        <h3 class="panel-title">Collaborators</h3>
      </div>
      <div class="panel-body">
        <ul class="list-group ">
          <% count = course_user_count %>
          <% collab = collaborators %>
          <% collab.keys.each do |profile| %>
            <li class="list-group-item">
              <%= image_tag profile.avatar.url(:thumb)%>
              <%= link_to "#{profile.first_name} #{profile.last_name}", profile_path(profile)%>
            </li>
          <%end%>
        </ul>
      </div>
    </div>
  </div>

</div>

<% end %>
