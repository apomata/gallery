<div class=" col-xs-offset-1 turninline-block">
	<h1>
		<strong>
			New project
		</strong>
	</h1>
</div>
<p id="notice"><%= notice %></p>
<% if flash[:alert] %>
    <p class="flash-error"><%= flash[:alert] %></p>
<% end %>

<%= form_tag({:action => 'create'}, :multipart => true) do%>

  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-xs-11 col-xs-offset-1 pull-left">
    <h1 class="turninline-block">
      <%= label :project, :title %><br>
      <strong>
        <%= text_field :project, :title %>
      </strong>
    </h1>
      <button type="submit">Create</button>
  </div>

<div class="col-xs-11 col-xs-offset-1 container">
  <h3>
    <strong>Picture</strong>
  </h3>

  <div class="row">
    <div id="mainpic" class="col-sm-6">
    	<div class="panel panel-default">
      <div class="panel-heading">
       <h3 class="panel-title">Add first picture</h3>
      </div>
      <div class="panel-body">
        <div class="field">
	    	<%= file_field :projectpicture, :picture %>
        </div>
      </div>
    </div>
    </div>
    <div class="col-sm-6">

      <div id="picdescpanel" class="panel panel-default">
        <div id='picdescpanelhead' class="panel-heading">
          <h3 class="panel-title">Picture Description</h3>
        </div>
        <div id='picdescpanelbody' class="panel-body scrollable">
    		<%= text_area :projectpicture, :description, :class => "form_control col-xs-12 custom-control", :rows => '10', :id => "descriptioninput"%>

        </div>
      </div>

    </div>

  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Embedcode</h3>
    </div>
    <div class="panel-body">
      <%= text_area :project, :embedcode, :class => "form_control col-xs-12", :rows => '3' %>
  </div>

  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Description</h3>
    </div>
    <div class="panel-body">
      <%= text_area :project, :description, :class => "form_control col-xs-12", :rows => '15' %>
    </div>
  </div>

</div>

<% end %>


